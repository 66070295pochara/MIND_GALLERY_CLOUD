<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Mind Gallery</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" href="/Auth/auth.css">

</head>
<body>
  <div class="container" id="container">
    <!-- Sign Up Form -->
    <div class="form-container sign-up">
      <form id="registerForm">
        <h1>Sign Up</h1>
      
        <span>Your imagination, your gallery</span>
        
        <div class="input-box">
          <label for="reg-name">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="8" r="4"/>
              <path d="M6 20c0-4 12-4 12 0"/>
            </svg>
          </label>
          <input required type="text" id="reg-name" name="name" placeholder="Enter your username">
        </div>

        <div class="input-box">
          <label for="reg-email">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </label>
          <input required type="email" id="reg-email" name="email" placeholder="Enter your email">
        </div>

        <div class="input-box">
          <label for="reg-password">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </label>
          <input required type="password" id="reg-password" name="password" placeholder="***********">
        </div>

        <button type="submit" class="btn">Sign Up</button>
        <div id="registerErrorMsg"></div>
      </form>
    </div>

    <!-- Sign In Form -->
    <div class="form-container sign-in">
      <form id="loginForm">
        <h1>Login</h1>
       
        <span>Where every mind becomes art</span>
        
        <div class="input-box">
          <label for="name">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="8" r="4"/>
              <path d="M6 20c0-4 12-4 12 0"/>
            </svg>
          </label>
          <input required type="text" id="name" name="name" placeholder="Enter your username">
        </div>

        <div class="input-box">
          <label for="password">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </label>
          <input required type="password" id="password" name="password" placeholder="***********">
        </div>

        <button type="submit" class="btn">Login</button>
        <p id="errorMsg"></p>
      </form>
    </div>

    <!-- Toggle Panel -->
    <div class="toggle-container">
      <div class="toggle">
        <div class="toggle-panel toggle-left">
          <div class="logo-container">
            <svg viewBox="0 0 620 250" xmlns="http://www.w3.org/2000/svg">
              <rect x="110" y="50" width="70" height="70" rx="10" fill="white"/>
              <rect x="190" y="50" width="70" height="70" rx="10" fill="white"/>
              <rect x="110" y="130" width="70" height="70" rx="10" fill="white"/>
              <rect x="190" y="130" width="70" height="70" rx="10" fill="white"/>
              <rect x="230" y="80" width="40" height="15" fill="white"/>
              <rect x="230" y="115" width="40" height="15" fill="white"/>
              <text x="320" y="120" font-family="Arial, sans-serif" font-size="60" font-weight="900" fill="white">MIND</text>
              <text x="320" y="180" font-family="Arial, sans-serif" font-size="60" font-weight="900" fill="white">GALLERY</text>
              <line x1="320" y1="195" x2="620" y2="195" stroke="white" stroke-width="8"/>
            </svg>
          </div>
          <h1>HELLO,  CREATOR!</h1>
          <p>Your mindâ€™s gallery awaits your next masterpiece.</p>
          <button class="hidden" id="login">Sign In</button>
        </div>
        <div class="toggle-panel toggle-right">
          <div class="logo-container">
            <svg viewBox="0 0 620 250" xmlns="http://www.w3.org/2000/svg">
              <rect x="110" y="50" width="70" height="70" rx="10" fill="white"/>
              <rect x="190" y="50" width="70" height="70" rx="10" fill="white"/>
              <rect x="110" y="130" width="70" height="70" rx="10" fill="white"/>
              <rect x="190" y="130" width="70" height="70" rx="10" fill="white"/>
              <rect x="230" y="80" width="40" height="15" fill="white"/>
              <rect x="230" y="115" width="40" height="15" fill="white"/>
              <text x="320" y="120" font-family="Arial, sans-serif" font-size="60" font-weight="900" fill="white">MIND</text>
              <text x="320" y="180" font-family="Arial, sans-serif" font-size="60" font-weight="900" fill="white">GALLERY</text>
              <line x1="320" y1="195" x2="620" y2="195" stroke="white" stroke-width="8"/>
            </svg>
          </div>
         <div class="logo-inline">
        <img src="/auth/icon_mg.png" alt="Mind Gallery Icon" class="logo-icon">
        <div class="logo-text">
            <span class="line1">MIND</span><br>
            <span class="line2">GALLERY</span> 
             
        </div>
        
        </div>
       <div class="logo-line"></div>

          <p>Join us and turn your thoughts into timeless art.</p>
          <button class="hidden" id="register">Sign Up</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Toggle Animation
    const container = document.getElementById('container');
    const registerBtn = document.getElementById('register');
    const loginBtn = document.getElementById('login');

    registerBtn.addEventListener('click', () => {
      container.classList.add("active");
    });

    loginBtn.addEventListener('click', () => {
      container.classList.remove("active");
    });

    // Login Form Handler (Your original function)
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const name = e.target.name.value.trim();
      const password = e.target.password.value.trim();

      const url = '/api/auth/login';

      const res = await fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ username: name, password }),
      });

      let data = {};
      try { data = await res.json(); } catch {}

      if (!res.ok) {
        document.getElementById('errorMsg').textContent =
          data.message || `Login failed (${res.status})`;
        return;
      }

      window.location.href = '/gallery/my';
    });

    // Register Form Handler (Your original function)
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const name = e.target.name.value.trim();
      const email = e.target.email.value.trim();
      const password = e.target.password.value.trim();

      try {
        const res = await fetch('/api/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username: name, name, email, password }),
        });

        const data = await res.json();

        if (!res.ok) {
          document.getElementById('registerErrorMsg').textContent =
            data.message || 'Username or Email already exists';
        } else {
          alert('Registration successful! Please log in');
          container.classList.remove("active");
          document.getElementById('registerForm').reset();
        }
      } catch (err) {
        document.getElementById('registerErrorMsg').textContent = 'Connection error occurred';
      }
    });
  </script>
</body>
</html>